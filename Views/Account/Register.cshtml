@{
    //load file Layout2.cshtml vào đây
    Layout = "~/Views/Shared/Layout1.cshtml";
}
<div class="container">

    <div class="row" style="margin-top:50px;">
        <div style="width:500px;margin:auto" class="col-lg-6 col-sm-6 col-md-6 col-xs-12 col-md-offset-3">
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "exists")
            {
                <div class="alert alert-danger">Email đã tồn tại!</div>
            }
            <div class=" main-content-area">
                <div class="wrap-login-item ">
                    <div class="register-form form-item ">
                        <form class="form-stl" action="/Account/RegisterPost" name="frm-login" method="post">
                            <fieldset style="background-color: honeydew;" class="wrap-title">
                                <h3 class="form-title">Tạo tài khoản mới</h3>
                            </fieldset>
                            <fieldset class="wrap-input">
                                <label for="frm-reg-email">Địa chỉ Email*</label>
                                <input type="email" id="frm-reg-email" name="email" required placeholder="Input your Email address">
                            </fieldset>
                            <fieldset class="wrap-input">
                                <label for="frm-reg-password">Mật khẩu*</label>
                                <input type="password" id="frm-reg-password" name="password" required placeholder="Input your Password">
                            </fieldset>
                            <fieldset class="wrap-input">
                                <label for="frm-reg-lname">Họ và tên*</label>
                                <input type="text" id="frm-reg-lname" name="name" required placeholder="Input your Name*">
                            </fieldset>
                            <fieldset class="wrap-input">
                                <label for="frm-reg-lphone">Số điện thoại*</label>
                                <input type="text" id="frm-reg-lphone" name="phone" required placeholder="Input your Phone*">
                            </fieldset>
                            <fieldset class="wrap-input">
                                <label for="frm-reg-address">Địa chỉ*</label>
                                <input type="text" id="frm-reg-address" name="address" required placeholder="Input your Address">
                            </fieldset>
                            <input style="margin-top:20px;color: blue;border-radius: 15px;background-color: #9dd59d;" type="submit" class="btn btn-sign" value="Register" name="Đăng kí">
                        </form>
                    </div>
                </div>
            </div><!--end main products area-->
        </div>
    </div><!--end row-->

</div><!--end container-->
<style>
    .wrap-input input {
        float: right;
        width: 250px
    }
</style>