@{
    //load file Layout2.cshtml vào đây
    Layout = "~/Views/Shared/Layout1.cshtml";
}
<div class="container">

    <div class="row" style="margin-top:50px;">
        <div style="width:500px;margin:auto" class="col-lg-6 col-sm-6 col-md-6 col-xs-12 col-md-offset-3">
            @*đăng ký tài khoản thành công thì hiển thị thông tin bên dưới*@
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "register-success")
            {
                <div class="alert alert-success">Đăng ký tài khoản thành công, xin mời đăng nhập</div>
            }
            @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]) && Context.Request.Query["notify"] == "login-invalid")
            {
                <div class="alert alert-danger">Đăng nhập không thành công</div>
            }
            <div class=" main-content-area">
                <div class="wrap-login-item ">
                    <div class="login-form form-item form-stl">
                        <form name="frm-login" action="/Account/LoginPost" method="post" autocomplete="off">
                            <fieldset class="wrap-title">
                                <h3 class="form-title">Log in to your account</h3>
                            </fieldset>
                            <fieldset class="wrap-input">
                                <label for="frm-login-uname">Email Address:</label>
                                <input type="text" id="frm-login-uname" name="email" placeholder="Type your email address">
                            </fieldset>
                            <fieldset class="wrap-input">
                                <label for="frm-login-pass">Password:</label>
                                <input type="password" id="frm-login-pass" name="password" placeholder="************">
                            </fieldset>
                            <input style="margin-top:20px" type="submit" class="btn btn-submit" value="Login" name="submit">
                        </form>
                    </div>
                </div>
            </div><!--end main products area-->
        </div>
    </div><!--end row-->

</div><!--end container-->
<style>
    .wrap-input input {
        float: right;
        width: 250px
    }
</style>