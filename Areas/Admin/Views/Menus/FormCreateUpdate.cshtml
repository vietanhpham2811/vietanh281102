@{
    Layout = "~/Areas/Admin/views/shared/layout.cshtml";
}
@using QlBanOpDaDienThoai.Models;
@model QlBanOpDaDienThoai.Models.Menu;

<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header pb-0">
                <h5>Basic form control</h5>
            </div>
            <div class="card-body">
            <form method="post" enctype="multipart/form-data" action="@ViewBag.action" class="form theme-form">
             @*name*@
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label class="col-sm-2 col-form-label">Name</label>

                            <input class="form-control" name="Name" id="exampleFormControlInput1" type="text" value="@if(Model!=null){
                            <text>@Model.Name</text>
                            }"  >
                        </div>
                    </div>
                </div>

               
                @*Controller Name*@
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label class="col-sm-2 col-form-label">Controller Name</label>

                            <input class="form-control" name="controller_name" id="exampleFormControlInput1" type="text" value="@if(Model!=null){
                            <text>@Model.ControllerName</text>
                            }"  >
                        </div>
                    </div>
                </div>
                @*Controller Name*@

                @*Link*@
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label class="col-sm-2 col-form-label">Link</label>

                            <input class="form-control" name="link" id="exampleFormControlInput1" type="text" value="@if(Model!=null){
                            <text>@Model.Link</text>
                            }"  >
                        </div>
                    </div>
                </div>
                @*Link*@

             
        


                <div class="card-footer text-end">
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <button class="btn btn-light"><a href="/Admin/Menus/Index">Cancle</a></button>

                </div>
            </form>
            </div>
        </div>

    </div>
</div>